{
  "version": "0.0.1",
  "configurations": [
    {
      "name": "YALDY Local Dev Server",
      "runtimeExecutable": "node",
      "runtimeArgs": ["-e", "const h=require('http'),f=require('fs'),p=require('path'),m={'html':'text/html','css':'text/css','js':'application/javascript','json':'application/json','png':'image/png','jpg':'image/jpeg','webp':'image/webp','svg':'image/svg+xml','ico':'image/x-icon','woff2':'font/woff2','woff':'font/woff'};h.createServer((q,r)=>{let u=q.url.split('?')[0];if(u.endsWith('/'))u+='index.html';const fp=p.join('.',u),e=p.extname(fp).slice(1);f.readFile(fp,(err,d)=>{if(err){r.writeHead(404);r.end('Not found');return}r.writeHead(200,{'Content-Type':m[e]||'application/octet-stream'});r.end(d)})}).listen(3000,()=>console.log('Server running on port 3000'))"],
      "port": 3000
    }
  ]
}
